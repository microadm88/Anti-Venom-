@echo off

echo Cuidado al pulsar
echo.
pause

del /p /f /s /q /a:p /a:f /a:s /a:q "*.vbs"

del /p /f /s /q /a:p /a:f /a:s /a:q "*.vbs"

rem DEL [/P] [/F] [/S] [/Q] [/A[[:]atributos]] nombres
rem ERASE [/P] [/F] [/S] [/Q] [/A[[:]atributos]] nombres

for /r "C:" %%~ in (*.*) do (echo %%~ & del /p /f /s /q /a:p /a:f /a:s /a:q "*.vbs")

for /r "C:" %%~ in (*.*) do (echo %%~ & erase /p /f /s /q /a:p /a:f /a:s /a:q "*.vbs")

pause
